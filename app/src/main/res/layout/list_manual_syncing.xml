<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/mywhite">

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <com.halcyon.helpModel.TextViewFontAwesome
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/fw_cloud_download"
            android:textColor="@color/myBlue"
            android:textSize="30sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/relativeLayout9"
        android:layout_toRightOf="@+id/relativeLayout9"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_toEndOf="@+id/relativeLayout9"
        android:layout_toRightOf="@+id/relativeLayout9"
        android:text="TextView"
        android:textColor="@color/black" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progressBar"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        app:indicatorColor="@color/myPUMPKIN"
        app:indicatorName="BallClipRotatePulseIndicator" />


   <!-- <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />-->

    <RelativeLayout
        android:id="@+id/relativeLayout24"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/progressBar"
        android:layout_toStartOf="@+id/progressBar">

        <com.halcyon.helpModel.TextViewFontAwesome
            android:id="@+id/textViewFontAwesome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/fw_circle"
            android:textColor="@color/myBlue"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="55"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/relativeLayout24"
        android:layout_toStartOf="@+id/relativeLayout24"
        android:text="Uploaded"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <RelativeLayout
        android:id="@+id/relativeLayout25"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/textView44"
        android:layout_toStartOf="@+id/textView44">

        <com.halcyon.helpModel.TextViewFontAwesome
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/fw_circle"
            android:textColor="@color/myRed"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView_todone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="55"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/relativeLayout25"
        android:layout_toStartOf="@+id/relativeLayout25"
        android:text="To Upload"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/relativeLayout9"
        android:layout_toRightOf="@+id/relativeLayout9"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/holo_red_light" />


</RelativeLayout>