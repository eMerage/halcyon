<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout5"
        android:background="@color/iconBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/ihSearchProducts"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/search_products"
                android:text=""
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <ImageButton
                android:id="@+id/ihClearSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/clear_all"
                android:src="@drawable/content_remove" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_news"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:divider="@color/iconBlue"
            android:layout_alignParentTop="true"
            android:dividerHeight="20dip"
            android:layout_alignParentBottom="true"
            android:background="#e6e5e5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>