<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/relativeLayout99"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/relativeLayout8"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/blue"
        android:visibility="visible">

        <TextView
            android:id="@+id/textViewCodeSingleProduct"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="Code"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewdescriptionSingleProduct"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewCodeSingleProduct"
            android:layout_toRightOf="@+id/textViewCodeSingleProduct"
            android:text="Description"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewBatchSingleProduct"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewdescriptionSingleProduct"
            android:layout_toRightOf="@+id/textViewdescriptionSingleProduct"
            android:text="Batch" />

        <TextView
            android:id="@+id/txtStockSingleProduct"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewBatchSingleProduct"
            android:layout_toRightOf="@+id/textViewBatchSingleProduct"
            android:text="Stock"
            android:textColor="@color/myRed" />

        <TextView
            android:id="@+id/textViewPriceSingleProduct"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/txtStockSingleProduct"
            android:layout_toRightOf="@+id/txtStockSingleProduct"
            android:text="Price" />

        <EditText
            android:id="@+id/editTextShelfSingleProduct"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewPriceSingleProduct"
            android:layout_toRightOf="@+id/textViewPriceSingleProduct"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextRequestSingleProduct"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/editTextShelfSingleProduct"
            android:layout_toRightOf="@+id/editTextShelfSingleProduct"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextOrderSingleProduct"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/editTextRequestSingleProduct"
            android:layout_toRightOf="@+id/editTextRequestSingleProduct"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextFreeSingleProduct"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/editTextOrderSingleProduct"
            android:layout_toRightOf="@+id/editTextOrderSingleProduct"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextDiscountSingleProduct"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/editTextFreeSingleProduct"
            android:layout_toRightOf="@+id/editTextFreeSingleProduct"
            android:ems="10"
            android:inputType="numberDecimal" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout99"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#CCCCCC">

        <TextView
            android:id="@+id/textViewCodet"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="Code" />

        <TextView
            android:id="@+id/textViewdescription"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewCodet"
            android:layout_toRightOf="@+id/textViewCodet"
            android:text="Description "
            android:textColor="@color/myBlue" />

        <TextView
            android:id="@+id/textViewBatch"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewdescription"
            android:layout_toRightOf="@+id/textViewdescription"
            android:text="Batch" />

        <TextView
            android:id="@+id/textViewStock"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewBatch"
            android:layout_toRightOf="@+id/textViewBatch"
            android:text="Stock"
            android:textColor="@color/myRed" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textViewStock"
            android:layout_toRightOf="@+id/textViewStock"
            android:text="Price"
            android:textColor="@color/myGreen" />

        <TextView
            android:id="@+id/TextShelf"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textViewPrice"
            android:layout_toRightOf="@+id/textViewPrice"
            android:text="Shelf" />

        <TextView
            android:id="@+id/TextRequest"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/TextShelf"
            android:layout_toRightOf="@+id/TextShelf"
            android:text="Request" />

        <TextView
            android:id="@+id/TextOrder"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/TextRequest"
            android:layout_toRightOf="@+id/TextRequest"
            android:text="Order" />

        <TextView
            android:id="@+id/TextFree"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/TextOrder"
            android:layout_toRightOf="@+id/TextOrder"
            android:text="Free" />

        <TextView
            android:id="@+id/editTextDiscount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/TextFree"
            android:layout_toRightOf="@+id/TextFree"
            android:text="Discount(%)" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout9"
        android:layout_alignLeft="@+id/relativeLayout9"
        android:layout_alignStart="@+id/relativeLayout9"
        android:layout_above="@+id/relativeLayout4">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCCCCC"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/black">

        <TextView
            android:id="@+id/textViewtot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Total Value : 0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/checkBox_freeIssues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Free Issue"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnNextToPayment"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            android:text="Next"
            android:textColor="#000000" />
    </RelativeLayout>


</RelativeLayout>